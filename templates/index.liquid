				<th scope="row">Age</th>
				<td>23</td>
				<td>12</td>
			</tr>
		</table>
		<br />
		<p>Table with Colspan</p>
		<table>
			<tr>
				<th></th>
				<th scope="col">9am</th>
				<th scope="col">10am</th>
				<th scope="col">11am</th>
			</tr>
			<tr>
				<th scope="row">Saturday</th>
				<td>Math</td>
				<td colspan="2">Physics</td>
			</tr>
			<tr>
				<th scope="row">Sunday</th>
				<td colspan="3">Free Time!</td>
			</tr>
		</table>
		<br />
		<p>Table with Rowspan</p>
		<table>
			<tr>
				<th></th>
				<th scope="col">ABC</th>
				<th scope="col">NBC</th>
				<th scope="col">CNN</th>
			</tr>
			<tr>
				<th scope="row">6pm - 7pm</th>
				<td rowspan="2">Movie</td>
				<td>Comedy</td>
				<td>News</td>

			</tr>
			<tr>
				<th scope="row">7pm - 8pm</th>
				<td>Sports</td>
				<td>Current Affairs</td>
			</tr>
		</table>
		<br />
		<p>Long Tables</p>
		<table>
			<thead>
				<tr>
					<th scope="col">Date</th>
					<th scope="col">Income</th>
					<th scope="col">Expenditure</th>
